{
  "name": "tokentop",
  "version": "0.1.0",
  "description": "Real-time AI token usage monitor - htop for your API costs",
  "author": "Nigel",
  "license": "MIT",
  "type": "module",
  "bin": {
    "ttop": "./src/cli.ts"
  },
  "scripts": {
